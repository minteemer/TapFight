<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="valiev.timur.tapfight.presentation.game.view.GameActivity">

    <Button
        android:id="@+id/button_p1"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@color/player1_color"
        android:onClick="onTapBtn"
        android:text="@string/player_1_btn_text"
        android:textColor="#fff"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:rotation = "180"
        android:id="@+id/button_p2"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@color/player2_color"
        android:onClick="onTapBtn"
        android:text="@string/player_2_btn_text"
        android:textColor="#fff"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/p1_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/initial_score_field_text"
        android:textColor="@color/player1_color"
        android:textSize="40sp"
        app:layout_constraintBottom_toTopOf="@+id/button_p1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/progress_game_time" />

    <TextView
        android:rotation = "180"
        android:id="@+id/p2_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/initial_score_field_text"
        android:textColor="@color/player2_color"
        android:textSize="40sp"
        app:layout_constraintBottom_toTopOf="@+id/progress_game_time"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_p2" />

    <ProgressBar
        android:id="@+id/progress_game_time"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:max="1000"
        android:progress="0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.498" />

</androidx.constraintlayout.widget.ConstraintLayout>
