<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="minteemer.tapfight">

    <application
        android:name="minteemer.tapfight.TapFightApp"
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="minteemer.tapfight.presentation.startGame.StartGameActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="minteemer.tapfight.presentation.bubbles.BubblesGameActivity"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity android:name="minteemer.tapfight.presentation.gameOver.GameOverActivity" />

    </application>

</manifest>
